<h1>Listing place_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Colour</th>
  </tr>

<% for place_type in @place_types %>
  <tr>
    <td><%=h place_type.name %></td>
    <td><%=h place_type.colour %></td>
    <td><%= link_to 'Show', place_type %></td>
    <td><%= link_to 'Edit', edit_place_type_path(place_type) %></td>
    <td><%= link_to 'Destroy', place_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

