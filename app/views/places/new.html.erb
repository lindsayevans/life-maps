<h1>New place</h1>

<% form_for(@place) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :place_type %><br />
    <%= f.text_field :place_type %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :coordinates %><br />
    <%= f.text_field :coordinates %>
  </p>
  <p>
    <%= f.label :from %><br />
    <%= f.date_select :from %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.date_select :to %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', places_path %>
